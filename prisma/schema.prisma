generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QuizSet {
  id        Int      @id @default(autoincrement())
  title     String // 문제 세트 제목
  topic     String // 주제 (예: 괴산의 역사)
  quizzes   Quiz[] // 1:N 관계
  createdAt DateTime @default(now())
  createdBy String // 생성자 IP
}

model Quiz {
  id            Int     @id @default(autoincrement())
  quizSetId     Int // QuizSet 외래키 
  quizSet       QuizSet @relation(fields: [quizSetId], references: [id]) // quizSet 객체 가리킴
  question      String  @db.Text
  optionA       String  @db.Text
  optionB       String  @db.Text
  optionC       String  @db.Text
  optionD       String  @db.Text
  answer        String // 정답 (A, B, C, D 중 하나)
  qrCode        String // QR 코드 URL
  questionOrder Int

  @@index([quizSetId])
}

model adminLogin {
  ID       Int    @id @default(autoincrement())
  adminID  String @db.VarChar(20)
  adminPWD String @db.VarChar(20)
}

model session {
  id        String   @id @default(uuid())
  adminID   String   @db.VarChar(20) // 관리자 ID 
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([adminID])
}
